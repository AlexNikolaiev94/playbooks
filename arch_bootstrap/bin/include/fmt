#!/usr/bin/env bash

COLOUR_PLAIN='\033[0m'
COLOUR_INFO='\033[1;34m'
COLOUR_PROMPT='\033[1;32m'
COLOUR_WARN='\033[1;33m'
COLOUR_SUCCESS='\033[0;32m'
COLOUR_ERR='\033[0;32m'

info () {
    echo -e "\n${COLOUR_INFO}> $1${COLOUR_PLAIN}\n"
}

prompt () {
    echo -e "\n${COLOUR_prompt} $1${COLOUR_PLAIN}\n"
}
